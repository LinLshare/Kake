<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/menu_layout"
  android:layout_width="180dp"
  android:layout_height="wrap_content"
  android:background="@color/colorC3"
  android:orientation="vertical">

  <LinearLayout
    android:id="@+id/menu_item_add_photo"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/bg_menu_item"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:src="@drawable/menu_add"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:text="导入图片"
      android:textColor="@color/colorC6"
      android:textSize="@dimen/fontSizeF2"/>
  </LinearLayout>

  <LinearLayout
    android:id="@+id/menu_item_share"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginTop="1dp"
    android:background="@drawable/bg_menu_item"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:src="@drawable/menu_share"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:text="分享"
      android:textColor="@color/colorC6"
      android:textSize="@dimen/fontSizeF2"/>
  </LinearLayout>

  <LinearLayout
    android:id="@+id/menu_item_kake"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginTop="1dp"
    android:background="@drawable/bg_menu_item"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:src="@drawable/menu_kake"/>

    <TextView
      android:id="@+id/kake_text_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:text="咔客"
      android:textColor="@color/colorC6"
      android:textSize="@dimen/fontSizeF2"/>
  </LinearLayout>

  <LinearLayout
    android:id="@+id/menu_item_generate_qrcode"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginTop="1dp"
    android:background="@drawable/bg_menu_item"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:src="@drawable/menu_code"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:text="生成二维码"
      android:textColor="@color/colorC6"
      android:textSize="@dimen/fontSizeF2"/>
  </LinearLayout>

</LinearLayout>