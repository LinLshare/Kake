<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/menu_layout"
  android:layout_width="180dp"
  android:layout_height="wrap_content"
  android:background="@color/colorC3"
  android:orientation="vertical">

  <LinearLayout
    android:id="@+id/add_photo_layout"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/colorC3"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:src="@drawable/menu_add"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:text="导入图片"
      android:textColor="@color/colorC6"
      android:textSize="@dimen/fontSizeF2"/>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginTop="1dp"
    android:background="@color/colorC1"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:src="@drawable/menu_share_dis"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:text="分享"
      android:textColor="@color/colorC4"
      android:textSize="@dimen/fontSizeF2"/>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginTop="1dp"
    android:background="@color/colorC1"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:src="@drawable/menu_kake_dis"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:text="咔客"
      android:textColor="@color/colorC4"
      android:textSize="@dimen/fontSizeF2"/>
  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginTop="1dp"
    android:background="@color/colorC1"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <ImageView
      android:layout_width="24dp"
      android:layout_height="24dp"
      android:src="@drawable/menu_code_dis"/>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="8dp"
      android:text="生成二维码"
      android:textColor="@color/colorC4"
      android:textSize="@dimen/fontSizeF2"/>
  </LinearLayout>

</LinearLayout>