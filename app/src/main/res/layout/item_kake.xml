<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="184dp"
    android:orientation="vertical"
    tools:background="@color/colorAccent">

    <ImageView
      android:id="@+id/photo_image_view"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:scaleType="centerCrop"/>

    <TextView
      android:id="@+id/name_text_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:layout_marginBottom="16dp"
      android:layout_marginLeft="16dp"
      android:textColor="@color/colorC1"
      android:textSize="@dimen/fontSizeF2"
      tools:text="Camera 20182839"/>
  </RelativeLayout>

  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorC1">

    <com.home77.common.ui.widget.CircleImageView
      android:id="@+id/avatar_image_view"
      android:layout_width="36dp"
      android:layout_height="36dp"
      android:layout_centerVertical="true"
      android:layout_marginBottom="4dp"
      android:layout_marginLeft="16dp"
      android:layout_marginTop="4dp"
      android:scaleType="centerCrop"
      android:src="@drawable/user_avatar_def"/>

    <TextView
      android:id="@+id/user_text_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerVertical="true"
      android:layout_marginLeft="16dp"
      android:layout_toRightOf="@id/avatar_image_view"
      android:textColor="@color/colorC5"
      android:textSize="@dimen/fontSizeF4"
      tools:text="jljadslfjdsl"/>

  </RelativeLayout>

</LinearLayout>